# Database
# For Railway/Vercel deployment, use your Railway PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/private_video?schema=public"

# NextAuth
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Encryption key for AWS credentials (32 bytes in hex)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="your-encryption-key-change-this-in-production"

# Email Service (Resend or AWS SES)
# Option 1: Resend (recommended for simplicity)
RESEND_API_KEY="your-resend-api-key"
FROM_EMAIL="noreply@yourdomain.com"

# Option 2: AWS SES (if not using Resend)
# AWS_SES_ACCESS_KEY_ID="your-ses-access-key"
# AWS_SES_SECRET_ACCESS_KEY="your-ses-secret-key"
# AWS_SES_REGION="us-east-1"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Pre-signed URL expiry (in seconds) - 3 hours
PRESIGNED_URL_EXPIRY="10800"
