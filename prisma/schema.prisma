// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User model for authentication
model User {
  id            String         @id @default(cuid())
  email         String         @unique
  passwordHash  String         @map("password_hash")
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")

  // Relations
  awsCredentials   AwsCredentials?
  emailCredentials EmailCredentials?
  videos           Video[]
  sharedVideos     VideoShare[]   @relation("SharedByUser")

  @@map("users")
}

// AWS credentials stored securely (encrypted)
model AwsCredentials {
  id                String   @id @default(cuid())
  userId            String   @unique @map("user_id")
  accessKeyId       String   @map("access_key_id")      // Will be encrypted
  secretAccessKey   String   @map("secret_access_key")  // Will be encrypted
  bucketName        String   @map("bucket_name")
  region            String
  mediaConvertRole  String?  @map("media_convert_role") // IAM role ARN for MediaConvert
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("aws_credentials")
}

// Email credentials stored securely (encrypted)
model EmailCredentials {
  id                String   @id @default(cuid())
  userId            String   @unique @map("user_id")

  // Provider type
  provider          EmailProvider @default(RESEND)

  // Common fields
  fromEmail         String   @map("from_email")
  fromName          String?  @map("from_name")

  // API-based providers (Resend, SendGrid, Mailgun, Postmark)
  apiKey            String?  @map("api_key")  // Encrypted

  // AWS SES specific
  awsAccessKeyId    String?  @map("aws_access_key_id")  // Encrypted
  awsSecretKey      String?  @map("aws_secret_key")     // Encrypted
  awsRegion         String?  @map("aws_region")

  // SMTP specific
  smtpHost          String?  @map("smtp_host")
  smtpPort          Int?     @map("smtp_port")
  smtpUsername      String?  @map("smtp_username")      // Encrypted
  smtpPassword      String?  @map("smtp_password")      // Encrypted
  smtpSecure        Boolean? @map("smtp_secure")

  // Health check
  lastValidated     DateTime? @map("last_validated")
  isValid           Boolean  @default(true) @map("is_valid")

  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("email_credentials")
}

// Video model
model Video {
  id                  String   @id @default(cuid())
  userId              String   @map("user_id")
  title               String
  description         String?
  originalKey         String   @map("original_key")       // S3 key of original video
  hlsManifestKey      String?  @map("hls_manifest_key")   // S3 key of HLS manifest (m3u8)
  transcodingStatus   TranscodingStatus @default(PENDING) @map("transcoding_status")
  transcodingJobId    String?  @map("transcoding_job_id") // MediaConvert job ID
  duration            Int?     // Duration in seconds
  visibility          VideoVisibility @default(PRIVATE)   // Public videos can be embedded
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  // Relations
  owner  User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  shares VideoShare[]

  @@index([userId])
  @@index([visibility])
  @@map("videos")
}

// Video sharing permissions
model VideoShare {
  id              String   @id @default(cuid())
  videoId         String   @map("video_id")
  sharedWithEmail String   @map("shared_with_email")
  sharedByUserId  String   @map("shared_by_user_id")
  createdAt       DateTime @default(now()) @map("created_at")

  // Relations
  video      Video @relation(fields: [videoId], references: [id], onDelete: Cascade)
  sharedBy   User  @relation("SharedByUser", fields: [sharedByUserId], references: [id], onDelete: Cascade)

  @@unique([videoId, sharedWithEmail])
  @@index([sharedWithEmail])
  @@map("video_shares")
}

enum TranscodingStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum VideoVisibility {
  PRIVATE  // Only owner and shared users can view
  PUBLIC   // Anyone with the link can view (embeddable)
}

enum EmailProvider {
  RESEND
  AWS_SES
  SENDGRID
  SMTP
}
