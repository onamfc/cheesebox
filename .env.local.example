# This file shows example values for local development
# Copy this to .env.local and fill in your actual values

# Database - Use your Railway PostgreSQL connection string
DATABASE_URL="postgresql://postgres:password@localhost:5432/private_video"

# NextAuth - Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Encryption - Generate with: openssl rand -hex 32
ENCRYPTION_KEY="your-64-character-hex-encryption-key-here"

# Email - Sign up at resend.com
RESEND_API_KEY="re_xxxxxxxxxxxxx"
FROM_EMAIL="noreply@yourdomain.com"

# App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Pre-signed URL expiry (seconds) - 3 hours
PRESIGNED_URL_EXPIRY="10800"
